{
  "name": "rman",
  "description": "Monorepo repository manager",
  "version": "0.28.0",
  "author": "Panates",
  "license": "MIT",
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/rman.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "monorepo",
    "repository",
    "build",
    "lerna"
  ],
  "bin": {
    "rman": "bin/rman.mjs"
  },
  "type": "module",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "dependencies": {
    "@netlify/parse-npm-script": "^0.1.2",
    "chalk": "^5.3.0",
    "easy-table": "^1.2.0",
    "envinfo": "^7.13.0",
    "fast-glob": "^3.3.2",
    "figures": "^6.1.0",
    "ini": "^4.1.3",
    "is-ci": "^3.0.1",
    "js-yaml": "^4.1.0",
    "npmlog": "^7.0.1",
    "path-key": "^4.0.0",
    "power-tasks": "^1.7.3",
    "putil-merge": "^3.12.1",
    "putil-varhelpers": "^1.6.5",
    "semver": "^7.6.2",
    "signal-exit": "^4.1.0",
    "strict-typed-events": "^2.3.3",
    "strip-color": "^0.1.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.24.7",
    "@types/envinfo": "^7.8.4",
    "@types/ini": "^4.1.0",
    "@types/is-ci": "^3.0.4",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.2",
    "@types/npmlog": "^7.0.0",
    "@types/semver": "^7.5.8",
    "@types/signal-exit": "^3.0.4",
    "@types/strip-color": "^0.1.2",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import-x": "^0.5.1",
    "eslint-plugin-security": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.1",
    "ts-cleanup": "^0.2.6",
    "ts-gems": "^3.4.0",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "compile": "tsc -b tsconfig.json",
    "lint": "eslint .",
    "clean": "npm run clean:src && npm run clean:dist",
    "clean:dist": "rimraf cjs esm coverage",
    "clean:src": "ts-cleanup -s src --all | ts-cleanup -s test",
    "prebuild": "npm run clean:dist && npm run lint",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp package.cjs.json ./cjs/package.json",
    "test": "jest",
    "cover": "rimraf coverage",
    "precover": "jest --maxWorkers=1 --coverage",
    "precitest": "rimraf coverage",
    "citest": "jest --coverage --coverageReporters=lcov"
  }
}
