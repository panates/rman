{
  "name": "rman",
  "description": "Monorepo repository manager",
  "version": "0.31.0",
  "author": "Panates",
  "license": "MIT",
  "dependencies": {
    "@netlify/parse-npm-script": "^0.1.2",
    "ansi-colors": "^4.1.3",
    "easy-table": "^1.2.0",
    "envinfo": "^7.13.0",
    "fast-glob": "^3.3.2",
    "ini": "^4.1.3",
    "is-ci": "^3.0.1",
    "js-yaml": "^4.1.0",
    "npmlog": "^7.0.1",
    "power-tasks": "^1.9.0",
    "putil-merge": "^3.13.0",
    "putil-varhelpers": "^1.6.5",
    "semver": "^7.6.3",
    "signal-exit": "^4.1.0",
    "strict-typed-events": "^2.6.0",
    "strip-color": "^0.1.0",
    "tslib": "^2.6.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@panates/eslint-config": "^1.0.16",
    "@panates/eslint-config-ts": "^1.0.16",
    "@panates/tsconfig": "^1.0.16",
    "@types/envinfo": "^7.8.4",
    "@types/ini": "^4.1.1",
    "@types/is-ci": "^3.0.4",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.2.0",
    "@types/npmlog": "^7.0.0",
    "@types/semver": "^7.5.8",
    "@types/signal-exit": "^3.0.4",
    "@types/strip-color": "^0.1.2",
    "@types/yargs": "^17.0.33",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-cleanup": "^1.1.0",
    "ts-gems": "^3.5.0",
    "ts-jest": "^29.2.4",
    "ts-loader": "^9.5.1",
    "ts-node": "github:TypeStrong/ts-node#main",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "clean": "npm run clean:src && npm run clean:dist",
    "clean:dist": "rimraf build coverage",
    "clean:src": "ts-cleanup -s src --all | ts-cleanup -s test",
    "prebuild": "npm run clean:dist && npm run lint",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "npm run postbuild:copyfiles && npm run postbuild:copybin && node ./support/postbuild.cjs",
    "postbuild:copyfiles": "cp LICENSE README.md ./build",
    "postbuild:copybin": "mkdir ./build/bin && cp ./bin/rman.mjs ./build/bin",
    "test": "jest",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "precover": "rimraf coverage",
    "cover": "jest --runInBand --detectOpenHandles --coverage",
    "precitest": "rimraf coverage",
    "citest": "jest --coverage --coverageReporters=lcov"
  },
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "import": "./esm/index.js",
      "types": "./types/index.d.ts"
    }
  },
  "bin": {
    "rman": "bin/rman.mjs"
  },
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panates/rman.git"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "types",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "javascript",
    "typescript",
    "monorepo",
    "repository",
    "build",
    "lerna"
  ]
}
