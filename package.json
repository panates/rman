{
  "name": "rman",
  "description": "Monorepo repository manager",
  "version": "0.0.2",
  "author": "Panates",
  "license": "MIT",
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/rman.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "monorepo",
    "repository",
    "build",
    "lerna"
  ],
  "bin": {
    "rman": "bin/rman.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "fast-glob": "^3.2.7",
    "npm-run-path": "^4.0.1",
    "@netlify/parse-npm-script": "^0.1.2",
    "cli-progress": "^3.9.1"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.8",
    "@types/cli-progress": "^3.9.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@babel/eslint-parser": "^7.16.3",
    "eslint": "^8.0.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^9.0.1",
    "nyc": "^15.1.0",
    "ts-cleanup": "^0.2.2",
    "ts-loader": "^9.0.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">= 14.0"
  },
  "files": [
    "dist/",
    "bin/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "test": "TS_NODE_PROJECT='./test/tsconfig.json' mocha -r ts-node/register --reporter spec test/**/*.spec.ts",
    "cover": "nyc --reporter=cobertura --reporter html --reporter text npm run test",
    "clean": "npm run clean:src && npm run clean:dist",
    "clean:dist": "ts-cleanup -d dist --remove-dirs --all",
    "clean:src": "ts-cleanup -s src --all | ts-cleanup -s test",
    "prebuild": "npm run clean && npm run lint",
    "build": "tsc -b tsconfig.build.json",
    "compile": "tsc -b tsconfig.json",
    "lint": "eslint src/** --no-error-on-unmatched-pattern",
    "travis-cover": "nyc --reporter lcovonly npm run test"
  },
  "nyc": {
    "temp-dir": "./coverage/.nyc_output"
  }
}
