{
  "name": "rman",
  "description": "Monorepo repository manager",
  "version": "0.18.0",
  "author": "Panates",
  "license": "MIT",
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/rman.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "monorepo",
    "repository",
    "build",
    "lerna"
  ],
  "bin": {
    "rman": "bin/rman.js"
  },
  "type": "module",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "exports": {
    ".": "./cjs/index.js",
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "dependencies": {
    "@netlify/parse-npm-script": "^0.1.2",
    "chalk": "^5.0.1",
    "easy-table": "^1.2.0",
    "envinfo": "^7.8.1",
    "fast-glob": "^3.2.12",
    "figures": "^5.0.0",
    "ini": "^3.0.1",
    "is-ci": "^3.0.1",
    "js-yaml": "^4.1.0",
    "npmlog": "^6.0.2",
    "path-key": "^4.0.0",
    "power-tasks": "^0.8.0",
    "putil-merge": "^3.8.0",
    "putil-varhelpers": "^1.6.4",
    "semver": "^7.3.7",
    "signal-exit": "^3.0.7",
    "strict-typed-events": "^2.2.0",
    "strip-color": "^0.1.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.9",
    "@types/envinfo": "^7.8.1",
    "@types/ini": "^1.3.31",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^29.0.2",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.7.18",
    "@types/npmlog": "^4.1.4",
    "@types/semver": "^7.3.12",
    "@types/signal-exit": "^3.0.1",
    "@types/strip-color": "^0.1.0",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "8.21.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "ts-cleanup": "^0.2.5",
    "ts-gems": "^2.2.0",
    "ts-jest": "^29.0.1",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=14.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "compile": "tsc -b tsconfig.json",
    "lint": "eslint .",
    "clean": "npm run clean:src && npm run clean:dist",
    "clean:dist": "rimraf cjs esm coverage",
    "clean:src": "ts-cleanup -s src --all | ts-cleanup -s test",
    "prebuild": "npm run clean:dist && npm run lint",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp package.cjs.json ./cjs/package.json",
    "test": "jest",
    "cover": "rimraf coverage",
    "precover": "jest --maxWorkers=1 --coverage",
    "precitest": "rimraf coverage",
    "citest": "jest --coverage --coverageReporters=lcov"
  }
}
